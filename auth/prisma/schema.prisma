// Prisma schema para autenticação OAuth 2.0 com Google

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./auth.db"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String
  picture      String?
  googleId     String   @unique
  refreshToken String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("users")
}
